#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;

        map = <
RC(0,11) RC(1,11) RC(2,11) RC(3,11) RC(4,11) RC(5,11)                 RC(5,10) RC(4,10) RC(3,10) RC(2,10) RC(1,10) RC(0,10)
RC(0,10) RC(1,10) RC(2,10) RC(3,10) RC(4,10) RC(5,10)                 RC(5,9)  RC(4,9)  RC(3,9)  RC(2,9)  RC(1,9)  RC(0,9)
RC(0,9)  RC(1,9)  RC(2,9)  RC(3,9)  RC(4,9)  RC(5,9)                  RC(5,8)  RC(4,8)  RC(3,8)  RC(2,8)  RC(1,8)  RC(0,8)
RC(0,8)  RC(1,8)  RC(2,8)  RC(3,8)  RC(4,8)  RC(5,8)                  RC(5,7)  RC(4,7)  RC(3,7)  RC(2,7)  RC(1,7)  RC(0,7)
RC(0,7)  RC(1,7)  RC(2,7)  RC(3,7)  RC(4,7)  RC(5,7)                  RC(5,6)  RC(4,6)  RC(3,6)  RC(2,6)  RC(1,6)  RC(0,6)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";

        diode-direction = "col2row";
        row-gpios
            = <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // Row C from the schematic file
            , <&gpio0 115 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            , <&gpio0 113 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            ;
    };
};